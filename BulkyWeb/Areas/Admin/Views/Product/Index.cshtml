@model List<Bulky.Models.Product>


<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-light">Product List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Product" asp-action="Create" class="btn bg-primary">
            <i class="bi bi-plus-square"></i>
            Create New Product
        </a>
    </div>
</div>


<table class="table table-bordered table-striped">

    <thead>
    <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Description</th>
        <th>ISBN</th>
        <th>List Price</th>
        <th>Price 50+</th>
        <th>Price 100+</th>
    </tr>
    </thead>

    <tbody>
    <tr>
        @foreach (var product in Model.OrderBy(p => p.Price))
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>@product.ISBN</td>
                <td>@product.ListPrice</td>
                <td>@product.Price50</td>
                <td>@product.Price100</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tr>
    </tbody>
</table>