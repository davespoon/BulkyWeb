@page
@model IndexModel


<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-light">Category List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-page="/Categories/Create" class="btn bg-primary">
            <i class="bi bi-plus-square"></i>
            Create New Category
        </a>
    </div>
</div>


<table class="table table-bordered table-striped">

    <thead>
    <tr>
        <th>
            Category Name
        </th>
        <th>
            Display Order
        </th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    <tr>
        @foreach (var category in Model.Categories.OrderBy(c => c.DisplayOrder))
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/Categories/Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tr>
    </tbody>
</table>